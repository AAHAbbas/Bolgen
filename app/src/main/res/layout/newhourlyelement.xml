<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="4dp"
              android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:paddingTop="10dp"
                  android:paddingBottom="18dp"

                  android:layout_width="match_parent"
                  android:background="#65000000"
                  android:layout_height="wrap_content"
                  android:layout_margin="4dp"
                  android:orientation="horizontal">

        <TextView
                android:id="@+id/KL"
                android:text="KL12"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_gravity="start|center"/>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_margin="4dp"
                  android:orientation="vertical">
        <android.support.v7.widget.CardView
                android:id="@+id/expand_button2"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                app:cardBackgroundColor="#65000000"
                app:cardCornerRadius="40dp"
                android:background="?android:windowBackground"
                android:elevation="6dp"
                android:foreground="?selectableItemBackground"
                app:cardElevation="3dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/hour_vind_bilde"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="50dp"
                        android:src="@drawable/wind"
                        android:layout_gravity="start|center"
                />
                <TextView
                        android:id="@+id/hour_vind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="14dp"
                        android:textSize="27sp"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"/>
                <ImageView
                        android:id="@+id/hour_bølge_bilde"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="50dp"
                        android:src="@drawable/waves"

                        android:layout_gravity="start|center"
                />
                <TextView
                        android:id="@+id/hour_bølge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="14dp"
                        android:textSize="27sp"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_layout_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_pressed"
                app:el_duration="1000"
                app:el_expanded="false"
                app:el_parallax="0.5">

            <TextView
                    android:background="@drawable/round_corner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="FUCK YEAH WE MADE IT"
                    android:textColor="#650000" />

        </net.cachapa.expandablelayout.ExpandableLayout>
    </LinearLayout>

</LinearLayout>