<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AADAFF"
        android:id="@+id/now_fragment"
        tools:context=".now.NowFragment">



        <android.support.v7.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardBackgroundColor="#AADAFF"
                app:cardElevation="1dp"
                tools:ignore="MissingConstraints">

            <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="32dp"
                    android:progressDrawable="@drawable/custom_progress"
                    style="?android:attr/progressBarStyleHorizontal"/>

            <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="431dp"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="23dp"
                    android:max="100"
                    android:progressTint="@android:color/transparent"
                    android:thumb="@drawable/progress_thumb"
                    style="?android:attr/progressBarStyleHorizontal"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text = "\t0\t\t\t10\t\t\t20\t\t\t30\t\t\t40\t\t\t50\t\t\t60\t\t\t70\t\t\t80\t\t\t90\t\t\t100"
                      android:textColor="#000000"
                      android:textSize="15sp"
                      android:layout_gravity="bottom"
                      android:layout_marginBottom="44dp"
                      android:layout_marginEnd="4dp"
                      tools:ignore="HardcodedText"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text = "Trygt"
                      android:textColor="#000000"
                      android:textSize="20sp"
                      android:textStyle="bold"
                      android:layout_gravity="bottom"
                      android:layout_marginBottom="4dp"
                      android:layout_marginStart="4dp"
                      tools:ignore="HardcodedText"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text = "Farlig"
                      android:textColor="#000000"
                      android:textSize="20sp"
                      android:textStyle="bold"
                      android:layout_gravity="bottom|end"
                      android:layout_marginBottom="4dp"
                      android:layout_marginEnd="4dp"
                      tools:ignore="HardcodedText"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text = "Trygghetsskala"
                      android:textColor="#000000"
                      android:textSize="20sp"
                      android:textStyle="bold"
                      android:layout_gravity="center|top"
                      android:layout_marginTop="4dp"
                      android:layout_marginEnd="4dp"
                      tools:ignore="HardcodedText"/>

        </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="406dp"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingTop="150dp"
            android:clipToPadding="false"
            android:background="#AADAFF"
            tools:ignore="MissingConstraints"/>



</android.support.constraint.ConstraintLayout>